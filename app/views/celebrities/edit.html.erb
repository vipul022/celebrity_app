<h1> Edit Page</h1>

<form action="<%= celebrity_path(@celebrity.id) %>" method="POST">
<input type="hidden" value ="<%= form_authenticity_token %>"
    name="authenticity_token">
    <input type="hidden" name="_method" value="patch" />

    <label for="name">Name</label>
    <input type="text" name="celebrity[name]" id="name" value="<%= @celebrity.name %>" />

    <label for="notability">Notability</label>
    <input type="text" name="celebrity[notability]" id="notability" value="<%= @celebrity.notability %>" />

    <label for="Image">Image Url</label>
    <input type="text" name="celebrity[profile_picture]" value="<%= @celebrity.profile_picture %>" />

    <input type="submit" value="Update"  >


</form>